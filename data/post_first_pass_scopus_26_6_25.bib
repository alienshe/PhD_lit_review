  year={2024},
  journal={Anais da Academia Brasileira de Ciencias},
  volume={96},
  author={Simonetti, F.L. and Cabral, L. and Chávez, R. and Sette, L.D.},
  url={https://www.scopus.com/inward/record.uri?eid=2-s2.0-85200187976&doi=10.1590%2f0001-3765202420230598&partnerID=40&md5=e5840f529104de00a2f2bb5a4ac34107},
